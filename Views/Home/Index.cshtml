        .content {
            margin-left: 240px;
            padding: 20px;
            transition: all 0.3s ease-in-out;
        }

        /* Dashboard Header */
        .dashboard-header {
            background: white;
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 20px;
