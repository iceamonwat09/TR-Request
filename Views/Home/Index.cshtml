<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>

    <!-- ✅ Load Bootstrap 5 & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Poppins', sans-serif;
        }

        /* ✅ Sidebar */
        .sidebar {
            width: 240px;
            height: 100vh;
            background: #ffffff;
            box-shadow: 2px 0px 10px rgba(0, 0, 0, 0.1);
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 60px;
            transition: all 0.3s ease-in-out;
            overflow: hidden;
        }

        .sidebar.hide {
            width: 60px;
        }

        .sidebar .nav-link {
            color: #6c757d;
            padding: 12px 15px;
            display: flex;
            align-items: center;
            transition: all 0.3s ease-in-out;
            font-size: 16px;
            font-weight: 500;
        }

        .sidebar .nav-link.active {
            background: #007bff;
            color: white;
            border-radius: 5px;
        }

        .sidebar .nav-link i {
            font-size: 18px;
            width: 30px;
            text-align: center;
        }

        .sidebar .nav-link:hover {
            background: #edf0f5;
            color: #007bff;
        }

        /* ✅ Main Content */
        .content {
            margin-left: 240px;
            padding: 20px;
            transition: all 0.3s ease-in-out;
        }

        .content.full {
            margin-left: 60px;
        }

        /* ✅ Dashboard Card */
        .dashboard-card {
            border-radius: 12px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
            text-align: center;
            padding: 20px;
        }

        .dashboard-card:hover {
            transform: translateY(-5px);
        }

        .card-icon {
            font-size: 2rem;
            margin-bottom: 10px;
        }

        .logout-btn {
            text-decoration: none;
            color: white;
            background: #dc3545;
            padding: 10px 15px;
            border-radius: 8px;
            transition: 0.3s;
        }

        .logout-btn:hover {
            background: #bb2d3b;
        }

        /* ✅ Responsive */
        (max-width: 768px) {
            .sidebar {
                width: 60px;
            }

            .sidebar.hide {
                width: 0;
            }

            .content {
                margin-left: 60px;
            }

            .content.full {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>

    <!-- ✅ Sidebar -->
    <nav class="sidebar" id="sidebar">
        <a href="#" class="nav-link active"><i class="fa fa-home"></i> <span>Dashboard</span></a>
        <a href="/TrainingRequest/Create" class="nav-link">
            <i class="fa fa-plus-circle"></i> <span>สร้างหลักสูตร +</span>
        </a>

        <a href="#" class="nav-link"><i class="fa fa-list-alt"></i> <span>ข้อมูลการขออบรม</span></a>
        <a href="#" class="nav-link"><i class="fa fa-chart-bar"></i> <span>รายงาน</span></a>
        <a href="#" class="nav-link"><i class="fa fa-cogs"></i> <span>ระบบ</span></a>
    </nav>

    <!-- ✅ Main Content -->
    <div class="content" id="main-content">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <button class="btn btn-light" id="toggle-btn"><i class="fa fa-bars"></i></button>
            <div class="user-nav">
                <span class="text-muted">Hello, <strong>admin</strong></span>
                <a href="/Login/Logout" class="logout-btn ms-3"><i class="fa fa-sign-out-alt"></i> Logout</a>
            </div>
        </div>

        <!-- Dashboard Title -->
        <h2 class="fw-bold"><i class="fa fa-home"></i>Training Request Dashboard</h2>

        <!-- Dashboard Cards -->
        <div class="row mt-4">
            <div class="col-md-6 col-lg-3">
                <div class="card dashboard-card">
                    <div class="card-body">
                        <i class="fas fa-money-bill-wave card-icon text-success"></i>
                        <h5 class="fw-bold">64756</h5>
                        <p class="text-muted">ค่าใช้จ่าย</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card dashboard-card">
                    <div class="card-body">
                        <i class="fas fa-file-alt card-icon text-danger"></i>
                        <h5 class="fw-bold">0</h5>
                        <p class="text-muted">รายการที่ขออบรม</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card dashboard-card">
                    <div class="card-body">
                        <i class="fas fa-calendar-check card-icon text-primary"></i>
                        <h5 class="fw-bold">68</h5>
                        <p class="text-muted">รายการที่อบรมแล้ว</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card dashboard-card">
                    <div class="card-body">
                        <i class="fas fa-clock card-icon text-info"></i>
                        <h5 class="fw-bold">284</h5>
                        <p class="text-muted">รายการที่รออบรม</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ✅ JavaScript -->
    <script>
        const toggleBtn = document.getElementById("toggle-btn");
        const sidebar = document.getElementById("sidebar");
        const mainContent = document.getElementById("main-content");

        toggleBtn.addEventListener("click", () => {
            sidebar.classList.toggle("hide");
            mainContent.classList.toggle("full");
        });
    </script>

    <!-- ✅ Load Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
