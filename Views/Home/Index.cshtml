        // ====================================================================
        // Filter Functions
        // ====================================================================
        function applyFilters() {
            const year = document.getElementById('filterYear').value;
            const startDate = document.getElementById('filterStartDate').value;
            const endDate = document.getElementById('filterEndDate').value;

            currentFilters = {
                year: parseInt(year),
                startDate: startDate,
                endDate: endDate
            };

            document.getElementById('filterStatus').textContent =
                `Showing: ${startDate} to ${endDate}`;

            loadDashboard();
        }

        function resetFilters() {
            const year = new Date().getFullYear();
            document.getElementById('filterYear').value = year;
            document.getElementById('filterStartDate').value = `${year}-01-01`;
            document.getElementById('filterEndDate').value = `${year}-12-31`;

            currentFilters = {
                year: year,
                startDate: null,
                endDate: null
            };

            document.getElementById('filterStatus').textContent = 'Showing: All Data';

            loadDashboard();
        }

        // ====================================================================
        // Loading Functions
        // ====================================================================
        function showLoading() {
            document.getElementById('loadingOverlay').classList.add('active');
        }

        function hideLoading() {
            document.getElementById('loadingOverlay').classList.remove('active');
        }
