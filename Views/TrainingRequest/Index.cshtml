@model List<TrainingRequestApp.Models.TrainingRequest>
@{
    ViewData["Title"] = "Training Requests";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">
                        <i class="fas fa-list"></i> Training Requests
                    </h2>
                    <a href="@Url.Action("Create", "TrainingRequest")" class="btn btn-success">
                        <i class="fas fa-plus"></i> Create New Request
                    </a>
                </div>
                
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-primary">
                                    <tr>
                                        <th>ID</th>
                                        <th>Training Title</th>
                                        <th>Training Date</th>
                                        <th>Location</th>
                                        <th>Participants Count</th>
                                        <th>Status</th>
                                        <th>Created Date</th>
                                        <th width="150">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model)
                                    {
                                        <tr>
                                            <td>@request.Id</td>
                                            <td>@request.TrainingTitle</td>
                                            <td>@request.TrainingDate.ToString("dd/MM/yyyy")</td>
                                            <td>@request.Location</td>
                                            <td>
                                                <span class="badge bg-info">
                                                    @(request.Participants?.Count ?? 0) participants
                                                </span>
                                            </td>
                                            <td>
                                                @switch (request.Status)
                                                {
                                                    case "Pending":
                                                        <span class="badge bg-warning text-dark">Pending</span>
                                                        break;
                                                    case "Approved":
                                                        <span class="badge bg-success">Approved</span>
                                                        break;
                                                    case "Rejected":
                                                        <span class="badge bg-danger">Rejected</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@request.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@request.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                <a href="@Url.Action("Details", "TrainingRequest", new { id = request.Id })" 
                                                   class="btn btn-sm btn-outline-primary" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", "TrainingRequest", new { id = request.Id })" 
                                                   class="btn btn-sm btn-outline-secondary" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Training Requests Found</h5>
                            <p class="text-muted">Start by creating your first training request.</p>
                            <a href="@Url.Action("Create", "TrainingRequest")" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Create First Request
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>