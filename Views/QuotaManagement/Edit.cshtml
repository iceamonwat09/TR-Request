@model TrainingRequestApp.Models.TrainingRequestCost
@{
    ViewData["Title"] = "แก้ไขโควต้าประจำปี";
}

<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Floating Back Button */
        .floating-back-btn {
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 1000;
            background: rgba(255, 255, 255, 0.95);
            border: none;
            border-radius: 50px;
            padding: 12px 24px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
            text-decoration: none;
            color: #667eea;
            font-weight: 600;
        }

        .floating-back-btn:hover {
            background: white;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
            transform: translateY(-2px);
            color: #764ba2;
        }

        /* Loading Overlay */
        #loadingOverlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(102, 126, 234, 0.95);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }

        .spinner {
            width: 60px;
            height: 60px;
            border: 5px solid rgba(255, 255, 255, 0.3);
            border-top-color: white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            to { transform: rotate(360deg); }
        }

        /* Card Animations */
        .card {
            animation: fadeInUp 0.6s ease-out;
            border: none;
            border-radius: 20px;
            overflow: hidden;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .card-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 1.5rem;
        }

        .card-body {
            padding: 2rem;
        }

        /* Form Controls */
        .form-control, .form-select {
            border-radius: 10px;
            border: 2px solid #e0e0e0;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 0.5rem;
        }

        .form-text {
            color: #6c757d;
            font-size: 0.875rem;
        }

        /* Buttons */
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .btn-secondary {
            border-radius: 10px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-secondary:hover {
            transform: translateY(-2px);
        }

        /* Help Card */
        .help-card {
            background: rgba(255, 255, 255, 0.95);
            border: 2px solid #667eea;
            border-radius: 15px;
            margin-top: 1.5rem;
            animation: fadeInUp 0.8s ease-out;
        }

        .help-card .card-body {
            padding: 1.5rem;
        }

        .help-card .card-title {
            color: #667eea;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .help-card ul {
            margin-bottom: 0;
            padding-left: 1.5rem;
        }

        .help-card li {
            margin-bottom: 0.5rem;
            color: #555;
        }

        /* Alert Styling */
        .alert-danger {
            border-radius: 10px;
            border-left: 4px solid #dc3545;
        }

        .text-danger {
            font-weight: 600;
        }

        /* Container */
        .container {
            padding-top: 2rem;
            padding-bottom: 2rem;
        }
    </style>
</head>
<body>
    <!-- Loading Overlay -->
    <div id="loadingOverlay">
        <div class="spinner"></div>
    </div>

    <!-- Floating Back Button -->
    <a href="@Url.Action("Index", "QuotaManagement")" class="floating-back-btn">
        <i class="fas fa-arrow-left"></i> ย้อนกลับ
    </a>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-header">
                        <h2 class="mb-0">
                            <i class="fas fa-edit"></i> แก้ไขโควต้าประจำปี
                        </h2>
                    </div>

                    <div class="card-body">
                        <form asp-action="Edit" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="ID" />
                            <input type="hidden" asp-for="CreatedBy" />

                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <!-- Department Dropdown -->
                            <div class="mb-3">
                                <label asp-for="Department" class="form-label">
                                    <i class="fas fa-building"></i> ฝ่าย <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Department" class="form-select" required>
                                    <option value="">-- เลือกฝ่าย --</option>
                                    @if (ViewBag.Departments != null)
                                    {
                                        foreach (var dept in ViewBag.Departments)
                                        {
                                            <option value="@dept">@dept</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="Department" class="text-danger"></span>
                            </div>

                            <!-- Year Dropdown -->
                            <div class="mb-3">
                                <label asp-for="Year" class="form-label">
                                    <i class="fas fa-calendar-alt"></i> ปี <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Year" class="form-select" required>
                                    <option value="">-- เลือกปี --</option>
                                    @if (ViewBag.Years != null)
                                    {
                                        foreach (var year in ViewBag.Years)
                                        {
                                            <option value="@year">@year</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>

                            <!-- Quota Hours Input -->
                            <div class="mb-3">
                                <label asp-for="Qhours" class="form-label">
                                    <i class="fas fa-clock"></i> โควต้าชั่วโมง (ชม.) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Qhours" type="number" class="form-control"
                                       min="0" step="1" placeholder="กรอกจำนวนชั่วโมง" required />
                                <span asp-validation-for="Qhours" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle"></i> ระบุจำนวนชั่วโมงที่จัดสรรให้กับฝ่ายในปีนี้
                                </div>
                            </div>

                            <!-- Cost Input -->
                            <div class="mb-3">
                                <label asp-for="Cost" class="form-label">
                                    <i class="fas fa-money-bill-wave"></i> โควต้าเงิน (บาท) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Cost" type="number" class="form-control"
                                       min="0" step="0.01" placeholder="กรอกจำนวนเงิน" required />
                                <span asp-validation-for="Cost" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle"></i> ระบุงบประมาณที่จัดสรรให้กับฝ่ายในปีนี้
                                </div>
                            </div>

                            <!-- Buttons -->
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                <a href="@Url.Action("Index", "QuotaManagement")" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> ยกเลิก
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> บันทึกการแก้ไข
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Help Card -->
                <div class="card help-card">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="fas fa-question-circle"></i> คำแนะนำ
                        </h6>
                        <ul>
                            <li>แก้ไขฝ่าย ปี จำนวนชั่วโมง หรืองบประมาณตามต้องการ</li>
                            <li>ตรวจสอบข้อมูลให้ถูกต้องก่อนบันทึก</li>
                            <li>หากเปลี่ยนฝ่ายหรือปี ต้องตรวจสอบว่าไม่ซ้ำกับข้อมูลที่มีอยู่</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script>
            $(document).ready(function() {
                // Hide loading overlay after page loads
                setTimeout(function() {
                    $('#loadingOverlay').fadeOut(500);
                }, 300);

                // Show loading overlay on form submit
                $('form').on('submit', function() {
                    $('#loadingOverlay').fadeIn(300);
                });
            });
        </script>
    }
</body>
</html>
